<!doctype html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>우리동네 카페 - 회원가입</title>
  <style>
    :root {
      --naver-green: #03c75a;
      --line: #e5e7eb;
      --text: #202936;
      --bg: #f5f7fb;
      --card: #ffffff;
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: "Malgun Gothic", "Apple SD Gothic Neo", sans-serif;
      background: var(--bg);
      color: var(--text);
    }
    .top {
      background: var(--card);
      border-bottom: 1px solid var(--line);
      padding: 14px 18px;
    }
    .brand {
      color: var(--naver-green);
      font-size: 19px;
      font-weight: 800;
      text-decoration: none;
    }
    .wrap {
      max-width: 460px;
      margin: 40px auto;
      padding: 0 14px;
    }
    .card {
      background: var(--card);
      border: 1px solid var(--line);
      border-radius: 14px;
      padding: 18px;
    }
    h1 { margin: 0 0 14px; font-size: 24px; }
    label { display: block; margin: 0 0 6px; font-weight: 700; }
    input {
      width: 100%;
      border: 1px solid var(--line);
      border-radius: 10px;
      padding: 10px;
      margin: 0 0 12px;
    }
    button {
      width: 100%;
      border: 1px solid var(--naver-green);
      background: var(--naver-green);
      color: #fff;
      border-radius: 10px;
      padding: 10px;
      font-weight: 800;
      cursor: pointer;
    }
    .sub-link {
      margin-top: 10px;
      font-size: 14px;
      text-align: center;
    }
    .sub-link a {
      color: #2563eb;
      text-decoration: none;
    }
    .error-box {
      display: none;
      margin: 0 0 12px;
      border: 1px solid #fecaca;
      background: #fff1f2;
      color: #b91c1c;
      border-radius: 10px;
      padding: 10px;
      font-size: 13px;
      font-weight: 700;
    }
  </style>
</head>
<body>
  <div class="top">
    <a class="brand" href="/boards">우리동네 카페</a>
  </div>
  <main class="wrap">
    <section class="card">
      <h1>회원가입</h1>
      <form id="joinForm">
        <div id="errorBox" class="error-box"></div>
        <label for="username">유저네임</label>
        <input id="username" name="username" type="text" required />
        <label for="password">비밀번호</label>
        <input id="password" name="password" type="password" required />
        <label for="email">이메일</label>
        <input id="email" name="email" type="email" required />
        <button type="submit">회원가입</button>
      </form>
      <div class="sub-link">이미 계정이 있나요? <a href="/login">로그인</a></div>
    </section>
  </main>
  <script>
    document.getElementById("joinForm").addEventListener("submit", async function (e) {
      e.preventDefault();
      const errorBox = document.getElementById("errorBox");
      errorBox.style.display = "none";
      errorBox.textContent = "";

      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;
      const email = document.getElementById("email").value;

      const response = await fetch("/join", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ username: username, password: password, email: email })
      });

      const result = await response.json();
      if (!response.ok) {
        // 중복 유저네임처럼 서버에서 내려준 실패 메시지를 화면에 노출한다.
        errorBox.textContent = result.msg || "회원가입 실패";
        errorBox.style.display = "block";
        return;
      }

      alert("회원가입 성공");
      location.href = "/login";
    });
  </script>
</body>
</html>
